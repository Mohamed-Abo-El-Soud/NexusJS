<!-- log-in -->
<div id="log-in" class="modal front">
  <% form_tag('/login', {class: "col s12", id: "log-in-form"}) %>
  <%# form_for(:session, url: login_path, html: {class: "col s12", id: "log-in-form"}) do |f| %>
    <div class="modal-content">
      <h4>Log In</h4>
      <div class="row">
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">person</i>
          <label class="active" for="session_email">Email</label>
          <%= text_field_tag("email",{class: "validate", name: "session_email"}) %>
        </div>
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">vpn_key</i>
          <label class="active" for="session_password">Password</label>
          <%= password_field_tag("session_password",{class: "validate"}) %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6">
          <input type="checkbox" value="1" name="session[remember_me]" id="session_remember_me">
          <label for="session_remember_me">Remember me on this computer</label>
          <br/>
          <br/>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to("Log in", "#",
        {onClick: "$(this).closest('form#log-in-form.col.s12').submit()", id: "save-button",
          class: "modal-action modal-close waves-effect waves-green btn-flat "})%>
      <a href="#!" id="cancel-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
      <%= link_to("Forgot password", "#", class: "btn-flat ")%>
      <%# link_to("Forgot password", new_password_reset_path, class: "btn-flat ")%>
    </div>
  <% form_tag_end() %>
</div>
<!-- log-in end -->